<%= @list.name %>
<%= link_to "edit", @list.edit_link if @list.user = session[:user_id] %>
<%= render 'gifts/form', :list => @list, :gift => @gift, :action => @action %>

<% @list.gifts.each do |gift| %>
  <div class="gift">
    <%= image_tag gift.image %>
    <%= link_to gift.name, gift.url %>
    <%= gift.price %>
    <% if @list.user = session[:user_id] %>
      <%= link_to "delete", controller: "gifts", action: "delete", id: gift.id %>
      <%= link_to "edit", gift.edit_link %>
      <%= link_to "[^]", controller: "gifts", action: "move_down", id: gift.id %>
      <%= link_to "[v]", controller: "gifts", action: "move_up", id: gift.id %>
    <% end %>
  </div>
<% end %>